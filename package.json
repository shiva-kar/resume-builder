{
  "name": "resume-builder",
  "version": "3.1.1",
  "private": true,
  "description": "Professional Resume Builder - Create beautiful resumes with live preview and PDF export",
  "author": "Shiva Kar",
  "homepage": "https://github.com/shiva-kar/resume-builder",
  "repository": {
    "type": "git",
    "url": "https://github.com/shiva-kar/resume-builder.git"
  },
  "main": "electron/main.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder --win --publish never",
    "electron:build:portable": "npm run build && electron-builder --win portable --publish never",
    "deploy": "next build && echo. > out/.nojekyll && gh-pages -d out --dotfiles",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js --patch",
    "release:minor": "node scripts/release.js --minor",
    "release:major": "node scripts/release.js --major",
    "release:quick": "node scripts/release.js --patch -y",
    "version:bump": "node scripts/release.js --skip-build --skip-release"
  },
  "build": {
    "appId": "com.shivakar.resumebuilder",
    "productName": "Resume Builder",
    "artifactName": "Resume-Builder-${version}-${os}.${ext}",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "out/**/*",
      "public/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon.png",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "portable": {
      "artifactName": "Resume-Builder-${version}-Portable.exe"
    },
    "forceCodeSigning": false
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.17.2",
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@google/generative-ai": "^0.24.1",
    "@mistralai/mistralai": "^1.11.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-tooltip": "^1.0.7",
    "@react-pdf/renderer": "^3.4.4",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "groq-sdk": "^0.37.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.0.0",
    "lucide-react": "^0.294.0",
    "next": "14.0.4",
    "openai": "^4.24.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.16",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electron-serve": "^2.1.1",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.0.4",
    "gh-pages": "^6.3.0",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "wait-on": "^9.0.3"
  }
}
